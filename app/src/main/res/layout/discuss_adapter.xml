<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/discuss_adapter_sdv"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                fresco:actualImageScaleType="centerCrop"
                fresco:placeholderImage="@drawable/img_touxiang"
                fresco:placeholderImageScaleType="centerCrop"
                fresco:roundAsCircle="true" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/discuss_adapter_tv_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="yangs"
                    android:textColor="@color/error_tv"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/discuss_adapter_tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="2017-10-29 19:36"
                    android:textColor="@color/error_tv"
                    android:textSize="12sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/discuss_adapter_iv_thumb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/discuss_adapter_tv_star"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="10dp"
                android:text="5"
                android:textColor="@color/error_tv"
                android:textSize="16sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/discuss_adapter_tv_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="40dp"
            android:text="这是评论内容"
            android:textColor="@color/error_tv"
            android:textSize="18sp" />

        <View
            android:id="@+id/discuss_adapter_v"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="40dp"
            android:background="@color/error_gray" />
    </LinearLayout>

</LinearLayout>