<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topic_adapter_tv_1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/tv_topic"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/topic_adapter_tv_2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="生理学"
            android:textColor="@color/tv_topic"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/topic_adapter_tv_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_weight="1"
            android:background="@drawable/topic_tab_lay1"
            android:gravity="center"
            android:text="分享QQ群或朋友圈 解锁4-7"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/topic_adapter_iv"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="right" />
    </LinearLayout>
</LinearLayout>