<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/topic_adapter_1_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:text="1   生理学"
            android:textColor="@color/me_tv_color"
            android:textSize="18dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/topic_adapter_2_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="5dp"
            android:layout_marginStart="25dp"
            android:ellipsize="end"
            android:gravity="center"
            android:maxLines="1"
            android:text="第一章 认识生理学"
            android:textColor="@color/me_tv_color"
            android:textSize="16sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/topic_adapter_1_tv_share"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:background="@drawable/button_fenxiang_default"
            android:gravity="center"
            android:text="分享QQ群 解锁4-7"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="invisible" />

        <View
            android:id="@+id/topic_adapter_2_v"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/topic_adapter_1_iv"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="right|center_vertical"
            android:visibility="visible" />

        <TextView
            android:id="@+id/topic_adapter_2_tv_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:text="0/20"
            android:textColor="@color/me_tv_color"
            android:textSize="12sp"
            android:visibility="gone" />
    </LinearLayout>

    <View
        android:id="@+id/topic_adapter_v1"
        android:layout_width="match_parent"
        android:layout_height="11dp"
        android:background="@color/me_white"
        android:visibility="gone" />

    <View
        android:id="@+id/topic_adapter_v2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="30dp"
        android:background="@color/error_gray"
        android:visibility="gone" />
</LinearLayout>